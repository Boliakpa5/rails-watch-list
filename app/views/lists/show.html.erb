<% if @list.photo.attached? %>
  <% url = cl_image_path @list.photo.key, width: 100, heigth: 200%>
<% else %>
  <% url = "https://images.wagwalkingweb.com/media/daily_wag/sense_guides/can-dogs-see-in-a-dark-room/hero/can-dogs-see-in-a-dark-room_3rQvHxF.jpg" %>
<% end %>
<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= url  %>)">
 <h1><%= @list.name %></h1>
</div>
<ul>
<div class="smallcont d-flex justify-content-between align-items-center px-4">
  <h2>Dogs</h2>
  <%= link_to "Add a dog",  new_list_bookmark_path(@list), class:'btn btn-success my-3' %>
</div>
<div class="list-container" >
      <% @list.bookmarks.each do |bookmark| %>
        <div class="card-trip">
          <div class="card-trip-infos">
            <div>
              <h2><%= bookmark.movie.title %> - <%= bookmark.movie.rating %><br>
                  <%= bookmark.movie.overview %> <br>
                  <br>
                  <i>"<%= bookmark.comment %>"!</i><br></h2>
            </div>
            <h2 class="card-trip-pricing"><%= link_to "Delete dog", bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Delete?" }  %></h2>
          </div>
        </div>
      <% end %>
    </div>
</ul>
